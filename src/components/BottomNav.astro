---
import '../styles/global.css'
import GitHub from '../icons/github.astro'
import Facebook from '../icons/facebook.astro'
import Discord from '../icons/discord.astro'
import Luz from '../icons/luz.astro'
---
<script src="../components/footerBar.js"></script>
<div class="social-bar flex bg-black items-center justify-center w-[600px] mb-96 gap-6 ease-in-out  px-5 py-1 m-auto rounded-full">
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><GitHub class="w-12 h-12 social-svg"/></a></div>
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><Facebook class="text-black w-12 h-12 social-svg"/></a></div>
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><Discord class="text-black w-12 h-12 social-svg"/></a></div>
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><Luz class="text-black w-12 h-12 social-svg"/></a></div>
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><Luz class="text-black w-12 h-12 social-svg"/></a></div>
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><Luz class="text-black w-12 h-12 social-svg"/></a></div>
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><Luz class="text-black w-12 h-12 social-svg"/></a></div>
  <div class="bg-[#ededed] rounded-full social-icon"><a href="#"><Luz class="text-black w-12 h-12 social-svg"/></a></div>
</div>

<h1 class="mt-96">afafa</h1>


<style>
  .social-bar {
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1); 
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  
  .social-bar:hover {
    width: 640px;
    box-shadow: 0 15px 30px rgba(0,0,0,0.15);
  }
  
  .social-icon {
    transition-property: transform, box-shadow;
    transition-duration: 0.6s;
    transition-timing-function: cubic-bezier(0.34, 1.56, 0.64, 1.4); /* Curva suave con rebote natural */
    transform: scale(0.9);
    position: relative;
    z-index: 1;
    will-change: transform, z-index; /* Mejora el rendimiento */
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }
  
  .social-icon:hover {
    box-shadow: 0 8px 15px rgba(0,0,0,0.1);
    
  }
  
  .social-svg {
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: transform, filter;
  }
  
  .social-icon.active .social-svg {
    filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
  }
</style>