              </svg>
            </a>
          </div>
        </div>
      </div>
      <section class="w-[1400px] m-auto text-red-500 py-12 px-4 sm:px-6 lg:px-8 mx-auto">
        <ComentariosFacebook article={article} />
      </section>
    </article>
    
    
    <!-- Navegación de artículos -->
    <div class="max-w-4xl mx-auto mt-12 flex flex-col sm:flex-row justify-between gap-4">
      {previous && (
        <a href={`/noticias/${previous.slug}`} class="group w-full sm:w-1/2 p-4 rounded-lg bg-gray-900 border border-gray-800 hover:bg-gray-800 transition-colors">
          <span class="block text-gray-400 text-sm mb-1">Más reciente</span>
          <span class="text-white font-medium group-hover:text-purple-300 transition-colors">{previous.data.title}</span>
        </a>
      )}
      {next && (
        <a href={`/noticias/${next.slug}`} class="group w-full sm:w-1/2 p-4 rounded-lg bg-gray-900 border border-gray-800 hover:bg-gray-800 transition-colors text-right">
          <span class="block text-gray-400 text-sm mb-1">Anterior artículo</span>
          <span class="text-white font-medium group-hover:text-purple-300 transition-colors">{next.data.title}</span>
        </a>
      )}
    </div>
  </main>
</Layout>