---
// Primero, debes importar los tipos correctos de Astro
import type { GetStaticPaths } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from 'astro:content';
import { render } from 'astro:content';
import FechaRelativa from "../../components/tsx/FechaRelativa";
import Layout from "../../layouts/Layout.astro";
import ComentariosFacebook from "../../components/comentariosFacebook.astro";
import LikeCounter from "../../components/jsx/LikeCounter.jsx";
import '../../styles/global.css'

export const getStaticPaths: GetStaticPaths = async () => {
  const articles = await getCollection("articles");
  return articles.map((article ) => ({
    params: { id: article.slug },
    props: { article },
  }));
};

// Define el tipo de article correctamente
const { article } = Astro.props as { article: CollectionEntry<'articles'> };

const { data } = article;
const { title, img, description, categoryName, publishDate } = data;
const { Content } = await render(article);

const articles = (await getCollection('articles'))
.filter(article => article.data.publishDate)
.sort((a, b) => {
  const dateA = new Date(a.data.publishDate!).getTime();
  const dateB = new Date(b.data.publishDate!).getTime();
  return dateB - dateA; //filtrar los artículos por fecha
});

const slug = Astro.params.id as string; // el slug actual
const index = articles.findIndex(article => article.slug === slug);

const previous = articles[index - 1];
const next = articles[index + 1];

const author = article.data.author;

export const prerender = true


---

<Layout title={title}>
  <main class="py-12 px-4 sm:px-6 lg:px-8 mx-auto">
    <article class="max-w-5xl mx-auto">
      <!-- Encabezado del artículo -->
      <header class="mb-10">
        <div class="flex items-center mb-4">
          <span class="inline-block px-3 py-1 bg-purple-900 text-purple-100 rounded-full text-sm font-medium mr-3">{categoryName}</span>
          <FechaRelativa fechaISO={publishDate!.toISOString()} client:load />
          <span class="inline-block px-3 py-1 bg-purple-900 text-purple-100 rounded-full text-sm font-medium mr-3">{author.id}</span>
        </div>
        
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 text-white leading-tight">{title}</h1>
        
        <p class="text-xl text-gray-300 mb-8">{description}</p>
      </header>
      
      <!-- Imagen destacada -->
      <div class="mb-10 rounded-xl overflow-hidden">
        <img
          src={img}
          alt={title}
          class="w-full h-[300px] sm:h-[400px] md:h-[500px] object-cover"
        />
      </div>
      
      <!-- Contenido del artículo -->
      <div class="prose  text-white/80 prose-lg max-w-none prose-invert prose-headings:text-gray-100 prose-p:text-gray-300 prose-a:text-purple-400 prose-strong:text-white prose-code:text-purple-300 prose-code:bg-gray-800 prose-code:px-1 prose-code:py-0.5 prose-code:rounded">
        <Content />
      </div>
      <LikeCounter client:load articleId={article.slug} />
      
      <!-- Footer del artículo -->
      <div class="mt-16 pt-8 border-t border-gray-800">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
          <div class="mb-4 sm:mb-0">
            <h3 class="text-white font-medium">¿Te ha gustado este artículo?</h3>
            <p class="text-gray-400">Compártelo en tus redes sociales</p>
          </div>
          <div class="flex gap-4">
            <a href="#" class="p-2 bg-gray-800 rounded-full text-gray-300 hover:bg-purple-900 hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a href="#" class="p-2 bg-gray-800 rounded-full text-gray-300 hover:bg-purple-900 hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-2 16h-2v-6h2v6zm-1-6.891c-.607 0-1.1-.496-1.1-1.109 0-.612.492-1.109 1.1-1.109s1.1.497 1.1 1.109c0 .613-.493 1.109-1.1 1.109zm8 6.891h-1.998v-2.861c0-1.881-2.002-1.722-2.002 0v2.861h-2v-6h2v1.093c.872-1.616 4-1.736 4 1.548v3.359z"/>
